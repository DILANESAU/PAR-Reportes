<UserControl x:Class="WPF_PAR.MVVM.Views.FamiliasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid Margin="20">
        <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect FadeIn}">
            <Grid Visibility="{Binding VerResumen, Converter={StaticResource BoolToVis}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <materialDesign:Card Grid.Row="0" Margin="0,0,0,25" Padding="20" UniformCornerRadius="10">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="FilterVariant" VerticalAlignment="Center" Margin="0,0,10,0" 
                                                 Foreground="{DynamicResource PrimaryHueMidBrush}" Width="25" Height="25"/>
                        <TextBlock Text="Filtrar Resultados" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="16" Margin="0,0,30,0"/>

                        <ComboBox materialDesign:HintAssist.Hint="Sucursal" Width="200" Margin="0,0,20,0"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  ItemsSource="{Binding ListaSucursales}"
                                  DisplayMemberPath="Value"
                                  SelectedValuePath="Key"
                                  SelectedValue="{Binding SucursalSeleccionadaId}"/>

                        <ComboBox materialDesign:HintAssist.Hint="Año" Width="100" Margin="0,0,20,0"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  ItemsSource="{Binding ListaAnios}"
                                  SelectedItem="{Binding AnioSeleccionado}"/>

                        <ComboBox materialDesign:HintAssist.Hint="Mes" Width="140" Margin="0,0,20,0"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  ItemsSource="{Binding ListaMeses}"
                                  DisplayMemberPath="Value"
                                  SelectedValuePath="Key"
                                  SelectedValue="{Binding MesSeleccionado}"/>

                        <Button Content="Consultar" Command="{Binding ActualizarCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                materialDesign:ButtonAssist.CornerRadius="5"
                                Height="40" Padding="30,0" Margin="10,0,0,0"/>
                    </StackPanel>
                </materialDesign:Card>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding TarjetasFamilias}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <materialDesign:Card Style="{StaticResource InteractiveCard}"
                                                     Width="300" Margin="0,0,25,25" Background="{Binding ColorFondo}">
                                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                                            Command="{Binding DataContext.VerDetalleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding NombreFamilia}"
                                            Padding="0" Height="Auto" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                                        <Grid>
                                            <Border CornerRadius="12" Opacity="0.15">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="White" Offset="0"/>
                                                        <GradientStop Color="Black" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                            </Border>
                                            <StackPanel Margin="20">
                                                <Grid Margin="0,0,0,10">
                                                    <TextBlock Text="{Binding NombreFamilia}" FontSize="22" FontWeight="Bold" Foreground="White" TextTrimming="CharacterEllipsis"/>
                                                    <materialDesign:PackIcon Kind="ChartBox" Foreground="White" HorizontalAlignment="Right" Width="24" Height="24" Opacity="0.6"/>
                                                </Grid>
                                                <Separator Background="White" Opacity="0.4" Margin="0,0,0,15"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                    <TextBlock Text="{Binding VentaTotal, StringFormat=C2}" Foreground="White" FontSize="24" FontWeight="Bold"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding LitrosTotales, StringFormat={}{0:N1} Litros}" Foreground="White" Opacity="0.8" FontSize="14" Margin="0,0,0,20"/>
                                                <Border Background="#30000000" CornerRadius="8" Padding="12">
                                                    <StackPanel>
                                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                            <materialDesign:PackIcon Kind="StarCircle" Foreground="#FFD700" Margin="0,0,6,0"/>
                                                            <TextBlock Text="Top Producto" Foreground="White" Opacity="0.9" FontSize="11" FontWeight="SemiBold"/>
                                                        </StackPanel>
                                                        <TextBlock Text="{Binding ProductoEstrella}" Foreground="White" TextTrimming="CharacterEllipsis" FontSize="13"/>
                                                    </StackPanel>
                                                </Border>
                                                <TextBlock Text="VER ANÁLISIS" Foreground="White" FontSize="11" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,15,5,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Button>
                                </materialDesign:Card>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </materialDesign:TransitioningContent>

        <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect SlideInFromRight}">
            <Grid Visibility="{Binding VerDetalle, Converter={StaticResource BoolToVis}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="350"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <materialDesign:Card Grid.Row="0" Margin="0,0,0,20" Padding="10" UniformCornerRadius="8">
                    <Grid>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                                    Command="{Binding RegresarCommand}" ToolTip="Volver">
                                <materialDesign:PackIcon Kind="ArrowLeft" Width="25" Height="25"/>
                            </Button>
                            <TextBlock Text="{Binding TituloDetalle}" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            <TextBlock Text="| Análisis por Línea" Opacity="0.5" FontSize="18" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Button Style="{StaticResource MaterialDesignOutlinedButton}" Command="{Binding ExportarExcelCommand}" HorizontalAlignment="Right">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileExcel" Margin="0,0,8,0"/>
                                <TextBlock Text="Exportar Detalle"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </materialDesign:Card>

                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="23*"/>
                        <ColumnDefinition Width="30*"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:Card Grid.Column="0" Margin="0,0,10,0" UniformCornerRadius="10" Padding="15">
                        <Grid>
                            <TextBlock Text="Distribución de Ventas" FontWeight="Bold" Opacity="0.7"/>
                            <lvc:PieChart Series="{Binding SeriesDetalle}" 
                                          LegendPosition="Right"
                                          Margin="0,20,0,0"
                                          InitialRotation="-90"
                                          TooltipTextSize="16"  
                                          TooltipTextPaint="{Binding TooltipTextPaint}"/>
                        </Grid>
                    </materialDesign:Card>

                    <materialDesign:Card Grid.Column="1" Margin="10,0,10,0" UniformCornerRadius="10" Padding="15" Grid.ColumnSpan="2">
                        <Grid>
                            <TextBlock Text="Tendencia Mensual" FontWeight="Bold" Opacity="0.7"/>
                            <lvc:CartesianChart Series="{Binding SeriesTendencia}" 
                                XAxes="{Binding EjeXTendencia}"
                                Margin="0,20,0,0"
                                TooltipTextSize="14"/>
                        </Grid>
                    </materialDesign:Card>

                    <materialDesign:Card Grid.Column="3" Margin="10,0,0,0" UniformCornerRadius="10" Padding="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Background="{DynamicResource PrimaryHueMidBrush}" Padding="15">
                                <TextBlock Text="Desempeño por Línea" Foreground="White" FontWeight="Bold"/>
                            </Border>

                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding ResumenLineas}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#20000000" BorderThickness="0,0,0,1" Padding="15">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding NombreLinea}" FontWeight="Bold" FontSize="14"/>
                                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                            <materialDesign:PackIcon Kind="Star" Width="12" Height="12" VerticalAlignment="Center" Opacity="0.5"/>
                                                            <TextBlock Text="{Binding ProductoTop}" Opacity="0.6" FontSize="12" Margin="5,0,0,0" TextTrimming="CharacterEllipsis" MaxWidth="250"/>
                                                        </StackPanel>
                                                    </StackPanel>

                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                                                        <TextBlock Text="{Binding VentaTotal, StringFormat=C2}" FontWeight="Bold" HorizontalAlignment="Right"/>
                                                        <TextBlock Text="{Binding LitrosTotales, StringFormat={}{0:N0} Lts}" Opacity="0.6" FontSize="11" HorizontalAlignment="Right"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </materialDesign:Card>
                </Grid>

                <materialDesign:Card Grid.Row="2" UniformCornerRadius="10" Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Margin="15">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="TableSearch" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="Registro Individual de Movimientos" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            </StackPanel>
                            <TextBox Width="300" HorizontalAlignment="Right"
                                     materialDesign:HintAssist.Hint="Filtrar tabla..."
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:TextFieldAssist.HasClearButton="True"
                                     Padding="10,5"
                                     Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>

                        <DataGrid Grid.Row="1" ItemsSource="{Binding DetalleVentas}" Style="{StaticResource ModernDataGrid}" ColumnHeaderStyle="{StaticResource ModernColumnHeader}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="FECHA" Binding="{Binding FechaEmision, StringFormat=dd/MM}"/>
                                <DataGridTextColumn Header="LÍNEA" Binding="{Binding Linea}" FontWeight="SemiBold" Width="180"/>
                                <DataGridTextColumn Header="PRODUCTO" Binding="{Binding Descripcion}" Width="250"/>
                                <DataGridTextColumn Header="CLIENTE" Binding="{Binding Cliente}" Width="200"/>
                                <DataGridTextColumn Header="VENTA" Binding="{Binding TotalVenta, StringFormat=C2}" FontWeight="Bold">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Padding" Value="0,0,10,0"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </materialDesign:Card>
            </Grid>
        </materialDesign:TransitioningContent>

        <Grid Background="#90FFFFFF" 
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
              d:Visibility="Collapsed">
            <materialDesign:Card UniformCornerRadius="10" Padding="30" HorizontalAlignment="Center" VerticalAlignment="Center" >
                <StackPanel>
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                 Value="0" IsIndeterminate="True"
                                 Width="50" Height="50"
                                 Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                    <TextBlock Text="Procesando Datos..." 
                               HorizontalAlignment="Center" Margin="0,15,0,0" 
                               FontWeight="Bold" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>