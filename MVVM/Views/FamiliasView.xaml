<UserControl x:Class="WPF_PAR.MVVM.Views.FamiliasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1600"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="HoverCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}"/>
            <Setter Property="UniformCornerRadius" Value="15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="170"/>

            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                        <TranslateTransform Y="0"/>
                    </TransformGroup>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3" Color="Black"/>
                        </Setter.Value>
                    </Setter>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" To="1.03" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" To="1.03" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <DataTemplate x:Key="FamiliaCardTemplate">
            <materialDesign:Card Style="{StaticResource HoverCardStyle}">
                <Button Command="{Binding DataContext.VerDetalleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding NombreFamilia}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Padding="0" Height="Auto" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1.5*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="{Binding ColorFondo}" CornerRadius="15,15,0,0">
                            <Grid Margin="20">
                                <TextBlock Text="{Binding NombreFamilia}" 
                                           FontSize="24" FontWeight="Bold" 
                                           Foreground="{Binding ColorTexto}" 
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Bottom"/>

                                <materialDesign:PackIcon Kind="ChartBox" 
                                                         Foreground="{Binding ColorTexto}" Opacity="0.3"
                                                         Width="60" Height="60"
                                                         HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-10,-10,0"/>
                            </Grid>
                        </Border>

                        <Border Grid.Row="1" Background="{DynamicResource MaterialDesignPaper}" CornerRadius="0,0,15,15">
                            <Grid Margin="20,10">
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="VENTA" FontSize="10" Opacity="0.5" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding VentaTotal, StringFormat=C0}" FontSize="20" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                                    <TextBlock Text="VOLUMEN" FontSize="10" Opacity="0.5" FontWeight="Bold" HorizontalAlignment="Right"/>
                                    <TextBlock Text="{Binding LitrosTotales, StringFormat={}{0:N0} L}" FontSize="14" Opacity="0.8" HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Button>
            </materialDesign:Card>
        </DataTemplate>

        <DataTemplate x:Key="SkeletonCardTemplate">
            <materialDesign:Card Style="{StaticResource HoverCardStyle}" Background="#FAFAFA" UniformCornerRadius="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.5*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Background="#E0E0E0" CornerRadius="15,15,0,0"/>
                    <Border Grid.Row="1" Background="White" CornerRadius="0,0,15,15">
                        <StackPanel VerticalAlignment="Center" Margin="20,0">
                            <Border Background="#EEEEEE" Height="20" Width="100" HorizontalAlignment="Left" CornerRadius="4"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </materialDesign:Card>
        </DataTemplate>

    </UserControl.Resources>

    <Grid>
        <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect FadeIn}">
            <Grid Visibility="{Binding VerResumen, Converter={StaticResource BoolToVis}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <materialDesign:ColorZone Mode="Standard" Padding="20" materialDesign:ShadowAssist.Darken="True" Panel.ZIndex="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Border Background="{DynamicResource PrimaryHueLightBrush}" CornerRadius="8" Padding="8">
                                <materialDesign:PackIcon Kind="ChartDonutVariant" Width="24" Height="24" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                            </Border>
                            <StackPanel Margin="15,0,0,0">
                                <TextBlock Text="Panorama de Familias" Style="{StaticResource MaterialDesignHeadline6TextBlock}" FontWeight="Bold"/>
                                <TextBlock Text="Rendimiento general por categorías" Opacity="0.6" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}">
                            <ComboBox ItemsSource="{Binding ListaSucursales}" SelectedValue="{Binding GlobalFilters.SucursalId}"
                                      DisplayMemberPath="Value" SelectedValuePath="Key"
                                      Width="180" Margin="0,0,20,0" materialDesign:HintAssist.Hint="Sucursal" Style="{StaticResource MaterialDesignOutlinedComboBox}"/>

                            <DatePicker SelectedDate="{Binding GlobalFilters.FechaInicio}" Width="120" Margin="0,0,10,0" materialDesign:HintAssist.Hint="Desde" Style="{StaticResource MaterialDesignOutlinedDatePicker}"/>
                            <DatePicker SelectedDate="{Binding GlobalFilters.FechaFin}" Width="120" Margin="0,0,20,0" materialDesign:HintAssist.Hint="Hasta" Style="{StaticResource MaterialDesignOutlinedDatePicker}"/>
                            <Button Command="{Binding DataContext.ActualizarCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{StaticResource MaterialDesignRaisedButton}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Refresh" Margin="0,0,8,0"/>
                                    <TextBlock Text="Actualizar"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </materialDesign:ColorZone>

                <UniformGrid Grid.Row="1" Rows="1" Margin="20,30,20,10" Height="140">

                    <materialDesign:Card Margin="0,0,15,0" UniformCornerRadius="15" Background="{DynamicResource PrimaryHueMidBrush}" Foreground="White">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:PackIcon Kind="CurrencyUsd" Grid.Column="1" Width="100" Height="100" 
                                                     HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                                                     Opacity="0.15" Margin="0,0,-20,-20"/>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="30,0,0,0">
                                <TextBlock Text="VENTA TOTAL PERIODO" Opacity="0.8" FontWeight="Bold" />
                                <Viewbox StretchDirection="DownOnly" HorizontalAlignment="Left" Height="60">
                                    <TextBlock Text="{Binding GranTotalVenta, StringFormat=C2}" FontWeight="Bold"/>
                                </Viewbox>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>

                    <materialDesign:Card Margin="15,0,0,0" UniformCornerRadius="15" Background="#263238" Foreground="White">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:PackIcon Kind="Beaker" Grid.Column="1" Width="100" Height="100" 
                                                     HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                                                     Opacity="0.15" Margin="0,0,-20,-20"/>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="30,0,0,0">
                                <TextBlock Text="VOLUMEN TOTAL (LTS)" Opacity="0.7" FontWeight="Bold" FontSize="12" Foreground="#FFCC80"/>
                                <Viewbox StretchDirection="DownOnly" HorizontalAlignment="Left" Height="50">
                                    <TextBlock Text="{Binding GranTotalLitros, StringFormat={}{0:N0}}" FontWeight="Bold" Foreground="#FFCC80"/>
                                </Viewbox>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                </UniformGrid>

                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="0,20,0,40">
                    <StackPanel>
                        <TextBlock Text="Categorías Disponibles" HorizontalAlignment="Center" Opacity="0.4" Margin="0,0,0,15" FontWeight="Bold" />

                        <ItemsControl ItemsSource="{Binding TarjetasFamilias}" ItemTemplate="{StaticResource FamiliaCardTemplate}" 
                                      HorizontalAlignment="Center" MaxWidth="1600">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" IsItemsHost="True"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>

                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <ContentPresenter/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </StackPanel>
                </ScrollViewer>

                <Grid Grid.Row="2" Background="{DynamicResource MaterialDesignPaper}" 
                      Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}" 
                      Panel.ZIndex="10">
                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                        <WrapPanel HorizontalAlignment="Center" Margin="0,40,0,0">
                            <ContentControl ContentTemplate="{StaticResource SkeletonCardTemplate}"/>
                            <ContentControl ContentTemplate="{StaticResource SkeletonCardTemplate}"/>
                            <ContentControl ContentTemplate="{StaticResource SkeletonCardTemplate}"/>
                            <ContentControl ContentTemplate="{StaticResource SkeletonCardTemplate}"/>
                            <ContentControl ContentTemplate="{StaticResource SkeletonCardTemplate}"/>
                            <ContentControl ContentTemplate="{StaticResource SkeletonCardTemplate}"/>
                        </WrapPanel>
                    </ScrollViewer>
                </Grid>

            </Grid>
        </materialDesign:TransitioningContent>

        <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect SlideInFromRight}">
            <Grid Visibility="{Binding VerDetalle, Converter={StaticResource BoolToVis}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <materialDesign:ColorZone Mode="PrimaryLight" Padding="16" materialDesign:ShadowAssist.Darken="True">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Command="{Binding RegresarCommand}" Style="{StaticResource MaterialDesignToolButton}" ToolTip="Volver">
                            <materialDesign:PackIcon Kind="ArrowLeft" Width="30" Height="30"/>
                        </Button>
                        <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TituloDetalle}" Style="{StaticResource MaterialDesignHeadline4TextBlock}" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <ComboBox ItemsSource="{Binding SubLineasDisponibles}" SelectedItem="{Binding SubLineaSeleccionada}"
                                      Style="{StaticResource MaterialDesignFilledComboBox}" Width="200" Margin="0,0,15,0" materialDesign:HintAssist.Hint="Filtrar Sub-Línea"/>
                            <Button Command="{Binding ExportarExcelCommand}" Style="{StaticResource MaterialDesignOutlinedButton}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FileExcel" Margin="0,0,8,0"/>
                                    <TextBlock Text="Exportar CSV"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </materialDesign:ColorZone>

                <TabControl Grid.Row="1" Style="{StaticResource MaterialDesignFilledTabControl}" materialDesign:ColorZoneAssist.Mode="Standard">
                    <TabItem Header="DASHBOARD GRÁFICO">
                        <Grid Margin="30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Height="350" Margin="0,0,0,30">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="1.4*"/>
                                </Grid.ColumnDefinitions>

                                <materialDesign:Card Margin="0,0,15,0" UniformCornerRadius="10" Padding="20">
                                    <Grid>
                                        <TextBlock Text="Distribución" FontWeight="Bold" Opacity="0.5"/>
                                        <lvc:PieChart Series="{Binding SeriesDetalle}" LegendPosition="Right" InitialRotation="-90" TooltipTextSize="16"/>
                                    </Grid>
                                </materialDesign:Card>

                                <materialDesign:Card Grid.Column="1" Margin="15,0,0,0" UniformCornerRadius="10" Padding="20">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0" Margin="0,0,0,10">
                                            <TextBlock Text="Top Productos" FontWeight="Bold" Opacity="0.5" VerticalAlignment="Center"/>
                                            <ToggleButton HorizontalAlignment="Right" IsChecked="{Binding VerPorLitros}" Style="{StaticResource MaterialDesignSwitchToggleButton}" ToolTip="Cambiar Venta/Litros"/>
                                        </Grid>
                                        <lvc:CartesianChart Grid.Row="1" Series="{Binding SeriesTendencia}" XAxes="{Binding EjeXTendencia}" YAxes="{Binding EjeYTendencia}" TooltipTextSize="14"/>
                                    </Grid>
                                </materialDesign:Card>
                            </Grid>

                            <materialDesign:Card Grid.Row="1" UniformCornerRadius="10" Padding="20">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0" Margin="0,0,0,15">
                                        <TextBlock Text="Comportamiento Mensual" FontWeight="Bold" FontSize="18"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <RadioButton Content="Trim" Command="{Binding CambiarPeriodoGraficoCommand}" CommandParameter="TRIMESTRAL" Style="{StaticResource MaterialDesignChoiceChipOutlineRadioButton}" Margin="0,0,5,0"/>
                                            <RadioButton Content="Sem" Command="{Binding CambiarPeriodoGraficoCommand}" CommandParameter="SEMESTRAL" Style="{StaticResource MaterialDesignChoiceChipOutlineRadioButton}" Margin="0,0,5,0"/>
                                            <RadioButton Content="Anual" IsChecked="True" Command="{Binding CambiarPeriodoGraficoCommand}" CommandParameter="ANUAL" Style="{StaticResource MaterialDesignChoiceChipOutlineRadioButton}"/>
                                        </StackPanel>
                                    </Grid>
                                    <lvc:CartesianChart Grid.Row="1" Series="{Binding SeriesComportamientoLineas}" XAxes="{Binding EjeXMensual}" ZoomMode="X" LegendPosition="Top"/>
                                </Grid>
                            </materialDesign:Card>
                        </Grid>
                    </TabItem>

                    <TabItem Header="DATOS DETALLADOS">
                        <Grid Margin="30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBox Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}" Width="400" HorizontalAlignment="Left" Style="{StaticResource MaterialDesignOutlinedTextBox}" materialDesign:HintAssist.Hint="Buscar..." Margin="0,0,0,20"/>
                            <DataGrid Grid.Row="1" ItemsSource="{Binding DetalleVentas}" 
                                      AutoGenerateColumns="False" 
                                      CanUserAddRows="False" 
                                      IsReadOnly="True" 
                                      EnableRowVirtualization="True"
                                      EnableColumnVirtualization="True"
                                      materialDesign:DataGridAssist.CellPadding="12" 
                                      HeadersVisibility="Column">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="FECHA" Binding="{Binding FechaEmision, StringFormat=dd/MM/yyyy}"/>
                                    <DataGridTextColumn Header="SUCURSAL" Binding="{Binding Sucursal}"/>
                                    <DataGridTextColumn Header="LÍNEA" Binding="{Binding Linea}" FontWeight="Bold"/>
                                    <DataGridTextColumn Header="PRODUCTO" Binding="{Binding Descripcion}" Width="300"/>
                                    <DataGridTextColumn Header="CLIENTE" Binding="{Binding Cliente}" Width="250"/>
                                    <DataGridTextColumn Header="VOLUMEN" Binding="{Binding LitrosTotales, StringFormat={}{0:N1} L}"/>
                                    <DataGridTextColumn Header="VENTA" Binding="{Binding TotalVenta, StringFormat=C2}" FontWeight="Bold"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </materialDesign:TransitioningContent>
    </Grid>
</UserControl>