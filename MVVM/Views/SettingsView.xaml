<UserControl x:Class="WPF_PAR.MVVM.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel MaxWidth="1000" HorizontalAlignment="Center">

            <StackPanel Margin="0,0,0,40" HorizontalAlignment="Center">
                <materialDesign:PackIcon Kind="CogOutline" Width="50" Height="50" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}" Margin="0,0,0,10"/>
                <TextBlock Text="Configuración del Sistema" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{DynamicResource MaterialDesignBody}"/>
                <TextBlock Text="Gestiona tus preferencias y conexiones" FontSize="16" Opacity="0.6" HorizontalAlignment="Center"/>
            </StackPanel>

            <TextBlock Text="PREFERENCIAS DE USUARIO" FontWeight="Bold" Opacity="0.5" Margin="5,0,0,10"/>

            <Grid Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <materialDesign:Card Grid.Column="0" UniformCornerRadius="20" Padding="20" materialDesign:ElevationAssist.Elevation="Dp2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Background="{DynamicResource PrimaryHueLightBrush}" CornerRadius="15" Width="50" Height="50">
                            <materialDesign:PackIcon Kind="ThemeLightDark" Width="25" Height="25" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0">
                            <TextBlock Text="Modo Oscuro" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="Cambiar apariencia" FontSize="12" Opacity="0.6"/>
                        </StackPanel>

                        <ToggleButton Grid.Column="2" IsChecked="{Binding IsDarkMode, Mode=TwoWay}" Style="{StaticResource MaterialDesignSwitchToggleButton}"/>
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card Grid.Column="2" UniformCornerRadius="20" Padding="20" materialDesign:ElevationAssist.Elevation="Dp2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Background="{DynamicResource PrimaryHueLightBrush}" CornerRadius="15" Width="50" Height="50">
                            <materialDesign:PackIcon Kind="StoreMarker" Width="25" Height="25" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                            <TextBlock Text="Sucursal Predeterminada" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox ItemsSource="{Binding MisSucursales}" 
                                          SelectedValue="{Binding MiSucursalDefault}"
                                          DisplayMemberPath="Value" SelectedValuePath="Key"
                                          materialDesign:HintAssist.Hint="Seleccionar..."
                                          Style="{StaticResource MaterialDesignOutlinedComboBox}" Height="35" Padding="10,5" FontSize="12"/>

                                <Button Grid.Column="1" Command="{Binding GuardarSucursalCommand}" Margin="10,0,0,0"
                                        Style="{StaticResource MaterialDesignIconForegroundButton}" ToolTip="Guardar">
                                    <materialDesign:PackIcon Kind="ContentSave" Width="20" Height="20" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <TextBlock Text="CONEXIÓN A SERVIDORES" FontWeight="Bold" Opacity="0.5" Margin="5,0,0,10"/>

            <Grid Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <materialDesign:Card Grid.Column="0" UniformCornerRadius="20" Padding="0" materialDesign:ElevationAssist.Elevation="Dp3">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Background="#FFF3E0" Padding="20">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Security" Width="24" Height="24" Foreground="#FF9800" VerticalAlignment="Center"/>
                                <TextBlock Text="Servidor de Seguridad" FontWeight="Bold" FontSize="16" Foreground="#E65100" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <StackPanel Grid.Row="1" Margin="20">
                            <TextBox Text="{Binding AuthServer}" materialDesign:HintAssist.Hint="IP Servidor Login" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,15"/>
                            <TextBox Text="{Binding AuthDb}" materialDesign:HintAssist.Hint="BD Usuarios" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,15"/>
                            <TextBox Text="{Binding AuthUser}" materialDesign:HintAssist.Hint="Usuario SQL" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,15"/>
                            <PasswordBox x:Name="AuthPassBox" Tag="Auth" materialDesign:HintAssist.Hint="Contraseña" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"/>
                        </StackPanel>

                        <Button Grid.Row="2" Command="{Binding GuardarConexionCommand}" CommandParameter="{Binding ElementName=AuthPassBox}"
                                Style="{StaticResource MaterialDesignFlatButton}" Foreground="#E65100" Height="50" Content="GUARDAR CONFIGURACIÓN AUTH"/>
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card Grid.Column="2" UniformCornerRadius="20" Padding="0" materialDesign:ElevationAssist.Elevation="Dp3">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Background="#E3F2FD" Padding="20">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Database" Width="24" Height="24" Foreground="#2196F3" VerticalAlignment="Center"/>
                                <TextBlock Text="Servidor de Datos" FontWeight="Bold" FontSize="16" Foreground="#0D47A1" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <StackPanel Grid.Row="1" Margin="20">
                            <TextBox Text="{Binding DataServer}" materialDesign:HintAssist.Hint="IP Servidor ERP" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,15"/>
                            <TextBox Text="{Binding DataDb}" materialDesign:HintAssist.Hint="BD Intelisis" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,15"/>
                            <TextBox Text="{Binding DataUser}" materialDesign:HintAssist.Hint="Usuario SQL" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,15"/>
                            <PasswordBox x:Name="DataPassBox" Tag="Data" materialDesign:HintAssist.Hint="Contraseña" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"/>
                        </StackPanel>

                        <Button Grid.Row="2" Command="{Binding GuardarConexionCommand}" CommandParameter="{Binding ElementName=DataPassBox}"
                                Style="{StaticResource MaterialDesignFlatButton}" Foreground="#0D47A1" Height="50" Content="GUARDAR CONFIGURACIÓN DATOS"/>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <materialDesign:Card UniformCornerRadius="15" Padding="15" materialDesign:ElevationAssist.Elevation="Dp1" Background="{DynamicResource MaterialDesignPaper}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="{DynamicResource MaterialDesignDivider}" Width="40" Height="40" CornerRadius="20">
                        <materialDesign:PackIcon Kind="InformationVariant" Width="20" Height="20" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0">
                        <TextBlock Text="PAR Intelligence Reportes v1.1.0" FontWeight="SemiBold"/>
                        <TextBlock Text="Sistema de Inteligencia de Negocios · 2025" FontSize="12" Opacity="0.5"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Style="{StaticResource MaterialDesignFlatButton}" Content="VER LOGS" Command="{Binding VerLogsCommand}" FontSize="12"/>
                        <Button Style="{StaticResource MaterialDesignFlatButton}" Content="SOPORTE" Command="{Binding ContactarSoporteCommand}" FontSize="12"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

        </StackPanel>
    </ScrollViewer>
</UserControl>