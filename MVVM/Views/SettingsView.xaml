                <materialDesign:Card Style="{StaticResource ContentCardStyle}" Width="450" Height="180" Margin="0,0,30,30">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Border Background="{DynamicResource PrimaryHueLightBrush}" CornerRadius="25" Width="40" Height="40">
                                <materialDesign:PackIcon Kind="StoreMarker" Width="20" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                            </Border>
                            <TextBlock Text="Sucursal Predeterminada" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Margin="15,0,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1">
                            <TextBlock Text="Se seleccionará automáticamente al iniciar sesión." Opacity="0.5" FontSize="13" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox ItemsSource="{Binding MisSucursales}" 
                                          SelectedValue="{Binding MiSucursalDefault}"
                                          DisplayMemberPath="Value" SelectedValuePath="Key"
                                          materialDesign:HintAssist.Hint="Seleccionar Sucursal"
                                          Style="{StaticResource MaterialDesignOutlinedComboBox}" VerticalAlignment="Center"/>

                                <Button Grid.Column="1" Command="{Binding GuardarCommand}" Style="{StaticResource MaterialDesignIconForegroundButton}" ToolTip="Guardar Cambios" Margin="10,0,0,0">
                                    <materialDesign:PackIcon Kind="ContentSave" Width="24" Height="24" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card Style="{StaticResource ContentCardStyle}" Width="930" Margin="0,0,30,30">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <Border Background="{DynamicResource PrimaryHueLightBrush}" CornerRadius="25" Width="40" Height="40">
                                <materialDesign:PackIcon Kind="Palette" Width="20" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                            </Border>
                            <TextBlock Text="Personalización de Color" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Margin="15,0,0,0"/>
                        </StackPanel>

                        <TextBlock Text="Elige el color de énfasis para botones y elementos destacados:" Opacity="0.6" Margin="0,0,0,15"/>

                        <ItemsControl ItemsSource="{Binding ColoresDisponibles}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Width="50" Height="50" Margin="0,0,15,15"
                                        Background="{Binding CodigoHex}" 
                                        BorderBrush="{Binding CodigoHex}"
                                        Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                        Command="{Binding DataContext.CambiarColorCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding CodigoHex}"
                                        ToolTip="{Binding Nombre}">

                                        <materialDesign:PackIcon Kind="Check" 
                                            Width="24" Height="24" 
                                            Foreground="White"
                                            Visibility="{Binding EsSeleccionado, Converter={StaticResource BoolToVis}}"/>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Style="{StaticResource ContentCardStyle}" Width="930" Margin="0,0,30,30">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="InformationOutline" Width="50" Height="50" Foreground="#B0BEC5" VerticalAlignment="Top" Margin="0,10,20,0"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Acerca de PAR Reportes" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="Versión 1.0.2 - Compilación 2025" Opacity="0.5" FontSize="12" Margin="0,2,0,10"/>
                            <TextBlock Text="Desarrollado para uso interno. Si encuentras algún error o necesitas un reporte adicional, contacta al departamento de sistemas." TextWrapping="Wrap" Opacity="0.7"/>
                            <Button Style="{StaticResource MaterialDesignFlatButton}" HorizontalAlignment="Left" Margin="-10,10,0,0"
                                    Content="VER REGISTRO DE CAMBIOS" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

            </WrapPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>