<UserControl x:Class="WPF_PAR.MVVM.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="40">
        <StackPanel MaxWidth="600" HorizontalAlignment="Left">

            <TextBlock Text="Ajustes y Personalización" Style="{StaticResource MaterialDesignHeadline4TextBlock}" Margin="0,0,0,30"/>

            <materialDesign:Card Padding="20" UniformCornerRadius="8" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <materialDesign:PackIcon Kind="ThemeLightDark" Width="25" Height="25" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="Apariencia" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                    </StackPanel>

                    <Separator Margin="0,0,0,15"/>

                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Modo Oscuro" FontWeight="Bold"/>
                            <TextBlock Text="Cambia entre tema claro y oscuro para descansar la vista." Opacity="0.6" FontSize="12"/>
                        </StackPanel>

                        <ToggleButton Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                      IsChecked="{Binding IsDarkMode}"
                                      HorizontalAlignment="Right"/>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>
            
            

            <materialDesign:Card Padding="20" UniformCornerRadius="8">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <materialDesign:PackIcon Kind="Palette" Width="25" Height="25" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="Color del Sistema" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                    </StackPanel>

                    <Separator Margin="0,0,0,15"/>

                    <TextBlock Text="Selecciona el color de acento principal:" Margin="0,0,0,15"/>

                    <ItemsControl ItemsSource="{Binding ColoresDisponibles}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Width="50" Height="50" Margin="0,0,15,15"
                                        Background="{Binding CodigoHex}"
                                        BorderBrush="{Binding CodigoHex}"
                                        Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                        Command="{Binding DataContext.CambiarColorCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding CodigoHex}"
                                        ToolTip="{Binding Nombre}">
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Padding="20" UniformCornerRadius="8" Margin="0,20,0,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <materialDesign:PackIcon Kind="StoreMarker" Width="25" Height="25" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="Preferencias de Inicio" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                    </StackPanel>
                    <Separator Margin="0,0,0,15"/>

                    <TextBlock Text="Selecciona la sucursal que se cargará automáticamente al iniciar:" Margin="0,0,0,10"/>

                    <ComboBox materialDesign:HintAssist.Hint="Sucursal Predeterminada"
                        Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                        ItemsSource="{Binding MisSucursales}"
                        DisplayMemberPath="Value"
                        SelectedValuePath="Key"
                        SelectedValue="{Binding MiSucursalDefault}"
                        Width="250" HorizontalAlignment="Left"/>
                    <Button Command="{Binding GuardarCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="0,15,0,0"
                        ToolTip="Guardar esta sucursal como predeterminada">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ContentSave" Margin="0,0,8,0"/>
                            <TextBlock Text="Guardar"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                
            </materialDesign:Card>
        </StackPanel>
        
        
    </Grid>
</UserControl>