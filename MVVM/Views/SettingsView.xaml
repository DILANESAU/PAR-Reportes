             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40">
        <StackPanel MaxWidth="1000" HorizontalAlignment="Center">

            <StackPanel Margin="0,0,0,30" HorizontalAlignment="Center">
                <TextBlock Text="Configuración" Style="{StaticResource PageTitleStyle}" Foreground="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Center"/>
                <TextBlock Text="Personaliza tu experiencia y preferencias" Style="{StaticResource PageSubtitleStyle}" Foreground="{DynamicResource MaterialDesignBody}"/>
            </StackPanel>

            <WrapPanel Orientation="Horizontal">

                <!--<materialDesign:Card Style="{StaticResource ContentCardStyle}" Width="450" Height="180" Margin="0,0,30,30">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
