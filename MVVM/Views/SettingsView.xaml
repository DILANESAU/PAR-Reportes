                            <TextBlock Text="Tema Visual" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Margin="15,0,0,0"/>
                        </StackPanel>

                        <Grid Grid.Row="1" VerticalAlignment="Center">
