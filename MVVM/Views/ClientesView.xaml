<UserControl x:Class="WPF_PAR.MVVM.Views.ClientesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:WPF_PAR.Core.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             Background="#F5F7FA"
             FontFamily="{DynamicResource MaterialDesignFont}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:BoolToOpacityConverter x:Key="BoolToOpacityConverter"/>
        <converters:StringToInitialsConverter x:Key="StringToInitialsConverter"/>
    </UserControl.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Cartera de Clientes" Style="{StaticResource MaterialDesignHeadline4TextBlock}" FontWeight="Bold"/>

                    <Border Background="{DynamicResource PrimaryHueLightBrush}" CornerRadius="15" Margin="20,0,0,0" Padding="15,5" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountGroup" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                            <TextBlock Text="{Binding TotalClientesActivos}" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                            <TextBlock Text=" Clientes Activos" FontWeight="SemiBold" FontSize="14" Margin="5,0,0,0" Opacity="0.7" VerticalAlignment="Bottom"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <TextBlock Text="Análisis de comportamiento de compra por periodo" Opacity="0.5" FontSize="14" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                <TextBlock Text="VENTA TOTAL CARTERA" FontSize="11" FontWeight="Bold" Opacity="0.5" HorizontalAlignment="Right"/>
                <TextBlock Text="{Binding GranTotalVenta, StringFormat=C2}" FontSize="28" FontWeight="Bold" Foreground="#2E7D32"/>
            </StackPanel>
        </Grid>

        <materialDesign:Card Grid.Row="1" UniformCornerRadius="10" Padding="15" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="Buscar cliente..."
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         Width="400" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Ver por:" VerticalAlignment="Center" Margin="0,0,15,0" Opacity="0.6" FontWeight="Bold"/>

                    <RadioButton Content="Mes" 
                        Command="{Binding CambiarPeriodoCommand}" CommandParameter="MENSUAL"
                        Style="{StaticResource MaterialDesignChoiceChipOutlineRadioButton}" Margin="0,0,5,0"/>

                    <RadioButton Content="Trim" IsChecked="True" 
                        Command="{Binding CambiarPeriodoCommand}" CommandParameter="TRIMESTRAL"
                        Style="{StaticResource MaterialDesignChoiceChipOutlineRadioButton}" Margin="0,0,5,0"/>

                    <RadioButton Content="Sem" 
                        Command="{Binding CambiarPeriodoCommand}" CommandParameter="SEMESTRAL"
                        Style="{StaticResource MaterialDesignChoiceChipOutlineRadioButton}" Margin="0,0,5,0"/>

                    <RadioButton Content="Año" 
                        Command="{Binding CambiarPeriodoCommand}" CommandParameter="ANUAL"
                        Style="{StaticResource MaterialDesignChoiceChipOutlineRadioButton}"/>

                    <Button Command="{Binding ActualizarCommand}" Style="{StaticResource MaterialDesignIconForegroundButton}" ToolTip="Recargar" Margin="15,0,0,0">
                        <materialDesign:PackIcon Kind="Refresh"/>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
            <ItemsControl ItemsSource="{Binding ListaClientes}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card UniformCornerRadius="8" Margin="0,0,0,12" Padding="20,15" >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                </Grid.ColumnDefinitions>

                                <Border Background="#E3F2FD" Width="40" Height="40" CornerRadius="20" HorizontalAlignment="Left">
                                    <TextBlock Text="{Binding Nombre, Converter={StaticResource StringToInitialsConverter}}" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center" 
                                               FontWeight="Bold" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                                    <TextBlock Text="{Binding Nombre}" FontWeight="Bold" FontSize="15" TextTrimming="CharacterEllipsis"/>
                                    <StackPanel Orientation="Horizontal" Opacity="0.5">
                                        <materialDesign:PackIcon Kind="StoreMarker" Width="12" Height="12" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                        <TextBlock Text="Cliente Frecuente" FontSize="11"/>
                                    </StackPanel>
                                </StackPanel>

                                <ItemsControl Grid.Column="2" ItemsSource="{Binding Bloques}" VerticalAlignment="Center">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Rows="1"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="8,0" ToolTip="{Binding Valor, StringFormat=C2}">
                                                <ProgressBar Value="{Binding Valor}" Maximum="500000" Height="6" 
                                                             Style="{StaticResource MaterialDesignLinearProgressBar}"
                                                             Foreground="{Binding EsFuturo, Converter={StaticResource BoolToColorConverter}}" 
                                                             Opacity="{Binding EsFuturo, Converter={StaticResource BoolToOpacityConverter}}"/>

                                                <Grid Margin="0,4,0,0">
                                                    <TextBlock Text="{Binding Etiqueta}" FontSize="10" HorizontalAlignment="Left" Opacity="0.5"/>
                                                    <TextBlock Text="{Binding Valor, StringFormat={}{0:N0}}" FontSize="11" FontWeight="Bold" HorizontalAlignment="Right"
                                                               Opacity="{Binding EsFuturo, Converter={StaticResource BoolToOpacityConverter}}"/>
                                                </Grid>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <StackPanel Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Right">
                                    <TextBlock Text="{Binding VentaTotal, StringFormat=C2}" FontWeight="Bold" FontSize="18" Foreground="#2E7D32"/>
                                    <TextBlock Text="Acumulado Anual" FontSize="10" Opacity="0.5" HorizontalAlignment="Right"/>
                                </StackPanel>

                            </Grid>
                        </materialDesign:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Grid Grid.RowSpan="3" Background="#80FFFFFF" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" IsIndeterminate="True" Width="50" Height="50"/>
        </Grid>
    </Grid>
</UserControl>