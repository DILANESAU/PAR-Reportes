<UserControl x:Class="WPF_PAR.MVVM.Views.ClientesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:converters="clr-namespace:WPF_PAR.Core.Converters"
             xmlns:core="clr-namespace:WPF_PAR.Core" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             Background="Transparent"
             FontFamily="{DynamicResource MaterialDesignFont}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <core:BindingProxy x:Key="MyProxy" Data="{Binding}" />
    </UserControl.Resources>

    <Grid Margin="20">
        <FrameworkElement x:Name="proxy" DataContext="{Binding}"/>

        <Grid Visibility="{Binding EnModoLista, Converter={StaticResource BoolToVis}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" CornerRadius="15" Margin="0,0,0,20" Padding="25">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1565C0" Offset="0.0"/>
                        <GradientStop Color="#42A5F5" Offset="1.0"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Cartera de Clientes" FontSize="26" FontWeight="Black" Foreground="White"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <materialDesign:PackIcon Kind="AccountGroup" Foreground="White" Opacity="0.7" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Registros encontrados: " Foreground="White" Opacity="0.7"/>
                            <TextBlock Text="{Binding ClientesResumen.Count, FallbackValue=0}" Foreground="White" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Border Background="#30FFFFFF" CornerRadius="10" Padding="15,8" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="ACTIVOS" FontSize="10" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="{Binding TotalClientesActivos}" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" FontSize="16"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#30FFFFFF" CornerRadius="10" Padding="15,8">
                            <StackPanel>
                                <TextBlock Text="INACTIVOS" FontSize="10" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="{Binding TotalClientesInactivos}" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" FontSize="16"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <materialDesign:Card Grid.Row="1" Padding="15" Margin="0,0,0,20" UniformCornerRadius="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <ComboBox ItemsSource="{Binding Sucursales}" 
          SelectedItem="{Binding SucursalSeleccionada}"
                                  DisplayMemberPath="Value" SelectedValuePath="Key" Width="160" Margin="0,0,15,0" 
                                  materialDesign:HintAssist.Hint="Sucursal" Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>

                        <ComboBox ItemsSource="{Binding AñosDisponibles}" SelectedItem="{Binding AnioSeleccionado}"
                                  Width="90" Margin="0,0,15,0" materialDesign:HintAssist.Hint="Año" FontWeight="Bold"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>

                        <ComboBox ItemsSource="{Binding ModosVista}" SelectedItem="{Binding ModoSeleccionado}"
                                  Width="120" Margin="0,0,15,0" materialDesign:HintAssist.Hint="Periodo"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>

                        <TextBox Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}" Width="250"
                                 materialDesign:HintAssist.Hint="Buscar por nombre..." 
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                    </StackPanel>

                    <Button Grid.Column="2" Command="{Binding ActualizarCommand}" Style="{StaticResource MaterialDesignOutlinedButton}" ToolTip="Recargar Datos">
                        <materialDesign:PackIcon Kind="Refresh"/>
                    </Button>
                </Grid>
            </materialDesign:Card>

            <Grid Grid.Row="2" Margin="15,0,30,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="1" Text="CLIENTE" FontWeight="Bold" Opacity="0.5"/>
                <TextBlock Grid.Column="2" Text="AÑO ACTUAL" FontWeight="Bold" Opacity="0.5" TextAlignment="Right"/>
                <TextBlock Grid.Column="3" Text="AÑO ANTERIOR" FontWeight="Bold" Opacity="0.5" TextAlignment="Right"/>

                <TextBlock Grid.Column="4" Text="Q1" FontWeight="Bold" Opacity="0.5" TextAlignment="Right" Visibility="{Binding Data.VisibilityQ1, Source={StaticResource MyProxy}}"/>
                <TextBlock Grid.Column="5" Text="Q2" FontWeight="Bold" Opacity="0.5" TextAlignment="Right" Visibility="{Binding Data.VisibilityQ2, Source={StaticResource MyProxy}}"/>
                <TextBlock Grid.Column="6" Text="Q3" FontWeight="Bold" Opacity="0.5" TextAlignment="Right" Visibility="{Binding Data.VisibilityQ3, Source={StaticResource MyProxy}}"/>
                <TextBlock Grid.Column="7" Text="Q4" FontWeight="Bold" Opacity="0.5" TextAlignment="Right" Visibility="{Binding Data.VisibilityQ4, Source={StaticResource MyProxy}}"/>

                <TextBlock Grid.Column="4" Grid.ColumnSpan="2" Text="SEM 1" FontWeight="Bold" Opacity="0.8" TextAlignment="Center" Foreground="#E65100"
                           Visibility="{Binding Data.VisibilityS1, Source={StaticResource MyProxy}}"/>
                <TextBlock Grid.Column="6" Grid.ColumnSpan="2" Text="SEM 2" FontWeight="Bold" Opacity="0.8" TextAlignment="Center" Foreground="#E65100"
                           Visibility="{Binding Data.VisibilityS2, Source={StaticResource MyProxy}}"/>
            </Grid>

            <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding ClientesResumen}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" CornerRadius="8" Margin="0,0,5,8" Padding="10,12" materialDesign:ElevationAssist.Elevation="Dp1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="1*" />
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0" Style="{StaticResource MaterialDesignIconForegroundButton}" Height="30" Width="30"
                                            Command="{Binding DataContext.VerDetalleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}" ToolTip="Ver Análisis">
                                        <materialDesign:PackIcon Kind="EyeOutline" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                    </Button>

                                    <TextBlock Grid.Column="1" Text="{Binding Nombre}" FontWeight="SemiBold" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>

                                    <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding VentaAnualActual, StringFormat=C0}" FontWeight="Bold" Foreground="#2E7D32" TextAlignment="Right"/>
                                        <TextBlock Text="{Binding LitrosAnualActual, StringFormat={}{0:N0} L}" FontSize="10" Opacity="0.5" TextAlignment="Right"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding VentaAnualAnterior, StringFormat=C0}" FontWeight="Bold" Opacity="0.6" TextAlignment="Right"/>
                                        <TextBlock Text="{Binding PorcentajeCrecimiento, StringFormat=P1}" FontSize="10" TextAlignment="Right"
                                                   Foreground="{Binding PorcentajeCrecimiento, Converter={StaticResource BoolToColorConverter}}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="4" HorizontalAlignment="Right" VerticalAlignment="Center" Visibility="{Binding DataContext.VisibilityQ1, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                        <TextBlock Text="{Binding VentaQ1Actual, StringFormat=C0}" FontWeight="Bold" Foreground="#1565C0" TextAlignment="Right"/>
                                        <TextBlock Text="{Binding LitrosQ1Actual, StringFormat={}{0:N0} L}" FontSize="10" Opacity="0.5" TextAlignment="Right"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="5" HorizontalAlignment="Right" VerticalAlignment="Center" Visibility="{Binding DataContext.VisibilityQ2, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                        <TextBlock Text="{Binding VentaQ2Actual, StringFormat=C0}" FontWeight="Bold" Foreground="#1565C0" TextAlignment="Right"/>
                                        <TextBlock Text="{Binding LitrosQ2Actual, StringFormat={}{0:N0} L}" FontSize="10" Opacity="0.5" TextAlignment="Right"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="6" HorizontalAlignment="Right" VerticalAlignment="Center" Visibility="{Binding DataContext.VisibilityQ3, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                        <TextBlock Text="{Binding VentaQ3Actual, StringFormat=C0}" FontWeight="Bold" Foreground="#1565C0" TextAlignment="Right"/>
                                        <TextBlock Text="{Binding LitrosQ3Actual, StringFormat={}{0:N0} L}" FontSize="10" Opacity="0.5" TextAlignment="Right"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="7" HorizontalAlignment="Right" VerticalAlignment="Center" Visibility="{Binding DataContext.VisibilityQ4, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                        <TextBlock Text="{Binding VentaQ4Actual, StringFormat=C0}" FontWeight="Bold" Foreground="#1565C0" TextAlignment="Right"/>
                                        <TextBlock Text="{Binding LitrosQ4Actual, StringFormat={}{0:N0} L}" FontSize="10" Opacity="0.5" TextAlignment="Right"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="4" Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0"
                                                Visibility="{Binding DataContext.VisibilityS1, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                        <TextBlock Text="{Binding VentaS1Actual, StringFormat=C0}" FontWeight="Bold" Foreground="#E65100" TextAlignment="Right" FontSize="14"/>
                                        <TextBlock Text="{Binding LitrosS1Actual, StringFormat={}{0:N0} L}" FontSize="11" Opacity="0.6" TextAlignment="Right"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="6" Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0"
                                                Visibility="{Binding DataContext.VisibilityS2, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                        <TextBlock Text="{Binding VentaS2Actual, StringFormat=C0}" FontWeight="Bold" Foreground="#E65100" TextAlignment="Right" FontSize="14"/>
                                        <TextBlock Text="{Binding LitrosS2Actual, StringFormat={}{0:N0} L}" FontSize="11" Opacity="0.6" TextAlignment="Right"/>
                                    </StackPanel>

                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <Grid Visibility="{Binding EnModoDetalle, Converter={StaticResource BoolToVis}}" Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" CornerRadius="15" Margin="0,0,0,20" Padding="20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1565C0" Offset="0.0"/>
                        <GradientStop Color="#1E88E5" Offset="1.0"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Command="{Binding VolverListaCommand}" 
                            Style="{StaticResource MaterialDesignIconForegroundButton}"
                            Foreground="White" ToolTip="Regresar a la lista"
                            Height="40" Width="40" HorizontalAlignment="Left">
                        <materialDesign:PackIcon Kind="ArrowLeft" Width="25" Height="25"/>
                    </Button>

                    <StackPanel Grid.Column="1" Margin="20,0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding ClienteSeleccionado.Nombre}" 
                                   FontSize="22" FontWeight="Black" Foreground="White" 
                                   TextTrimming="CharacterEllipsis"/>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ChartBoxOutline" Foreground="White" Opacity="0.8" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Análisis profundo de rendimiento" FontSize="13" Foreground="White" Opacity="0.8"/>
                        </StackPanel>
                    </StackPanel>
                    

                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Ver gráfica:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="White" Opacity="0.8"/>

                        <ComboBox ItemsSource="{Binding ModosVista}" 
                            SelectedItem="{Binding ModoSeleccionado}"
                            Style="{StaticResource MaterialDesignFilledComboBox}"
                            materialDesign:TextFieldAssist.UnderlineBrush="White"
                            materialDesign:HintAssist.Foreground="White"
                            Foreground="White"
                            Background="#30FFFFFF"
                            BorderThickness="0" 
                            Padding="10,5" 
                            FontWeight="Bold" 
                            Width="120">

                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem" BasedOn="{StaticResource MaterialDesignComboBoxItemStyle}">
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>
                        
                        <Button Command="{Binding ImprimirReporteCommand}" 
                            Style="{StaticResource MaterialDesignIconForegroundButton}" 
                            Foreground="White" ToolTip="Descargar PDF Ejecutivo">
                            <materialDesign:PackIcon Kind="FilePdfBox" Width="25" Height="25"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <UniformGrid Grid.Row="1" Rows="1" Margin="0,0,0,20">
                <materialDesign:Card Margin="0,0,10,0" Padding="20" UniformCornerRadius="10">
                    <StackPanel>
                        <TextBlock Text="TICKET PROMEDIO" FontSize="11" Opacity="0.5" FontWeight="Bold"/>
                        <TextBlock Text="{Binding KpisDetalle.TicketPromedio, StringFormat=C2}" FontSize="24" FontWeight="Bold" Foreground="#2E7D32"/>
                    </StackPanel>
                </materialDesign:Card>
                <materialDesign:Card Margin="10,0,10,0" Padding="20" UniformCornerRadius="10">
                    <StackPanel>
                        <TextBlock Text="FRECUENCIA DE COMPRA" FontSize="11" Opacity="0.5" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding KpisDetalle.FrecuenciaCompra}" FontSize="24" FontWeight="Bold" Foreground="#1565C0"/>
                            <TextBlock Text=" facturas" VerticalAlignment="Bottom" Margin="5,0,0,4" Opacity="0.6"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>
                <materialDesign:Card Margin="10,0,0,0" Padding="20" UniformCornerRadius="10">
                    <StackPanel>
                        <TextBlock Text="ÚLTIMA COMPRA" FontSize="11" Opacity="0.5" FontWeight="Bold"/>
                        <TextBlock Text="{Binding KpisDetalle.UltimaCompra, StringFormat=dd/MMM/yyyy}" FontSize="24" FontWeight="Bold" Foreground="#E65100"/>
                    </StackPanel>
                </materialDesign:Card>
            </UniformGrid>

            <materialDesign:Card Grid.Row="2" Margin="0,0,0,20" Padding="15" UniformCornerRadius="10" Height="320">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Tendencia de Ventas (Dinero)" FontWeight="Bold" Opacity="0.6" FontSize="16"/>
                    <lvc:CartesianChart Grid.Row="1" Series="{Binding SeriesGrafica}" XAxes="{Binding EjeXGrafica}" YAxes="{Binding EjeYGrafica}" ZoomMode="X"/>
                </Grid>
            </materialDesign:Card>

            <Grid Grid.Row="3" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <materialDesign:Card Grid.Column="0" UniformCornerRadius="10" Padding="0">
                    <DockPanel>
                        <Border DockPanel.Dock="Top" Background="#FFEBEE" Padding="15">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="TrendingDown" Foreground="#D32F2F" Margin="0,0,10,0" Width="20" Height="20"/>
                                <TextBlock Text="Productos en Declive (Top 10)" Foreground="#D32F2F" FontWeight="Bold" FontSize="14"/>
                            </StackPanel>
                        </Border>
                        <DataGrid ItemsSource="{Binding ProductosEnDeclive}" AutoGenerateColumns="False" IsReadOnly="True" 
                                  HeadersVisibility="Column" materialDesign:DataGridAssist.CellPadding="10,8" GridLinesVisibility="Horizontal">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="PRODUCTO" Binding="{Binding Descripcion}" Width="*" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                <DataGridTextColumn Header="DIFERENCIA" Binding="{Binding Diferencia, StringFormat=C0}" FontWeight="Bold" Foreground="#D32F2F"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </materialDesign:Card>

                <materialDesign:Card Grid.Column="2" UniformCornerRadius="10" Padding="0">
                    <DockPanel>
                        <Border DockPanel.Dock="Top" Background="#E8F5E9" Padding="15">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="TrendingUp" Foreground="#388E3C" Margin="0,0,10,0" Width="20" Height="20"/>
                                <TextBlock Text="Productos en Aumento (Top 10)" Foreground="#388E3C" FontWeight="Bold" FontSize="14"/>
                            </StackPanel>
                        </Border>
                        <DataGrid ItemsSource="{Binding ProductosEnAumento}" AutoGenerateColumns="False" IsReadOnly="True" 
                                  HeadersVisibility="Column" materialDesign:DataGridAssist.CellPadding="10,8" GridLinesVisibility="Horizontal">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="PRODUCTO" Binding="{Binding Descripcion}" Width="*" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                <DataGridTextColumn Header="DIFERENCIA" Binding="{Binding Diferencia, StringFormat=+{0:C0}}" FontWeight="Bold" Foreground="#388E3C"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </materialDesign:Card>
            </Grid>
        </Grid>

        <Grid Style="{StaticResource LoadingOverlayStyle}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" 
                     Value="0" IsIndeterminate="True" 
                     Width="50" Height="50" Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                <TextBlock Text="Procesando datos..." 
                   Margin="0,20,0,0" FontWeight="SemiBold" 
                   HorizontalAlignment="Center" Opacity="0.6"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>