<Window x:Class="WPF_PAR.MVVM.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Height="550" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Border CornerRadius="15" Background="{DynamicResource MaterialDesignPaper}" 
            MouseDown="Border_MouseDown">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" CornerRadius="15,0,0,15">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1565C0" Offset="0.0"/>
                        <GradientStop Color="#0D47A1" Offset="1.0"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid ClipToBounds="True">
                    <Ellipse Width="300" Height="300" Fill="White" Opacity="0.05" Margin="-100,-100,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Ellipse Width="200" Height="200" Fill="White" Opacity="0.05" Margin="0,0,-50,-50" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>

                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="ChartBubble" Width="100" Height="100" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        <TextBlock Text="PAR INTELLIGENCE" Foreground="White" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Sistema de Análisis Comercial" Foreground="White" FontSize="14" Opacity="0.8" HorizontalAlignment="Center" Margin="0,5,0,0"/>

                        <Border Background="White" Height="1" Width="50" Opacity="0.5" Margin="0,20"/>

                        <TextBlock Text="v1.0.2" Foreground="White" FontSize="10" Opacity="0.5" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Column="1" Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0" Command="{Binding ExitCommand}"
                        Style="{StaticResource MaterialDesignIconForegroundButton}"
                        HorizontalAlignment="Right" VerticalAlignment="Top"
                        ToolTip="Salir">
                    <materialDesign:PackIcon Kind="Close" Width="25" Height="25"/>
                </Button>

                <StackPanel Grid.Row="1" VerticalAlignment="Center">
                    <TextBlock Text="Bienvenido" FontSize="24" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Text="Ingresa tus credenciales para continuar" FontSize="13" Opacity="0.6" Margin="0,0,0,30"/>

                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="Usuario"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             Margin="0,0,0,20"
                             FontSize="14">
                        <materialDesign:HintAssist.HintOpacity>0.5</materialDesign:HintAssist.HintOpacity>
                    </TextBox>

                    <PasswordBox x:Name="txtPassword"
                                 Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                 materialDesign:HintAssist.Hint="Contraseña"
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 Margin="0,0,0,30"
                                 FontSize="14"/>

                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                               FontSize="12" Margin="0,0,0,10" TextWrapping="Wrap"
                               Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <Grid>
                        <Button Command="{Binding LoginCommand}" 
                                CommandParameter="{Binding ElementName=txtPassword}"
                                IsDefault="True"
                                Height="50"
                                materialDesign:ButtonAssist.CornerRadius="8"
                                FontSize="16" FontWeight="Bold"
                                Content="INICIAR SESIÓN"
                                IsEnabled="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsBusy}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Height="50"
                                materialDesign:ButtonAssist.CornerRadius="8"
                                FontSize="16" FontWeight="Bold"
                                IsHitTestVisible="False"
                                Opacity="0.7">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsBusy}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                             IsIndeterminate="True"
                                             Value="0" Width="20" Height="20" Foreground="White" Margin="0,0,10,0"/>
                                <TextBlock Text="VERIFICANDO..." VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                </StackPanel>

                <TextBlock Grid.Row="2" Text="© 2026 PAR Pinturas" HorizontalAlignment="Center" FontSize="10" Opacity="0.3"/>
            </Grid>
        </Grid>
    </Border>
</Window>