<UserControl x:Class="WPF_PAR.MVVM.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1200"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             FontFamily="{DynamicResource MaterialDesignFont}">

    <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" CornerRadius="15" Margin="0,0,0,25" Padding="25">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#F5F7FA" Offset="0.0"/>
                        <GradientStop Color="#E4E8F0" Offset="1.0"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Panel General" FontSize="26" FontWeight="Black" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <materialDesign:PackIcon Kind="CalendarClock" VerticalAlignment="Center" Opacity="0.5" Width="15" Height="15" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding PeriodoSeleccionado, StringFormat='Viendo datos de: {0}'}" 
                                       FontSize="14" Opacity="0.6" FontWeight="SemiBold"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">

                        <materialDesign:Card UniformCornerRadius="20" Padding="5" Margin="0,0,10,0" materialDesign:ElevationAssist.Elevation="Dp1">
                            <ComboBox ItemsSource="{Binding Periodos}" 
                                      SelectedItem="{Binding PeriodoSeleccionado}"
                                      Style="{StaticResource MaterialDesignComboBox}"
                                      materialDesign:TextFieldAssist.UnderlineBrush="Transparent"
                                      BorderThickness="0"
                                      FontWeight="SemiBold"
                                      Padding="15,8"
                                      Width="140"/>
                        </materialDesign:Card>

                        <materialDesign:Card UniformCornerRadius="20" Padding="5" materialDesign:ElevationAssist.Elevation="Dp1">
                            <ComboBox ItemsSource="{Binding Sucursales}" 
                                      SelectedItem="{Binding SucursalSeleccionada}"
                                      DisplayMemberPath="Nombre"
                                      Style="{StaticResource MaterialDesignComboBox}"
                                      materialDesign:TextFieldAssist.UnderlineBrush="Transparent"
                                      BorderThickness="0"
                                      FontWeight="SemiBold"
                                      Padding="15,8"
                                      Width="220"/>
                        </materialDesign:Card>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <materialDesign:Card Grid.Column="0" UniformCornerRadius="20" Margin="0,0,15,0" materialDesign:ElevationAssist.Elevation="Dp4" BorderThickness="0">
                    <materialDesign:Card.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#1565C0" Offset="0"/>
                            <GradientStop Color="#4527A0" Offset="1"/>
                        </LinearGradientBrush>
                    </materialDesign:Card.Background>
                    <Grid>
                        <materialDesign:PackIcon Kind="CurrencyUsd" Width="120" Height="120" 
                                                 HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                                                 Foreground="White" Opacity="0.1" Margin="-20,-20"/>

                        <StackPanel Margin="25" VerticalAlignment="Center">
                            <TextBlock Text="Ingresos Totales" Foreground="White" Opacity="0.8" FontSize="14" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding KpiVentas, StringFormat={}{0:C0}}" 
                                       Foreground="White" FontSize="36" FontWeight="Bold" Margin="0,5,0,15"/>

                            <Border Background="#30FFFFFF" CornerRadius="10" HorizontalAlignment="Left" Padding="10,4">
                                <StackPanel Orientation="Horizontal">

                                    <materialDesign:PackIcon Width="15" Height="15" VerticalAlignment="Center" Foreground="White">
                                        <materialDesign:PackIcon.Style>
                                            <Style TargetType="materialDesign:PackIcon">
                                                <Setter Property="Kind" Value="TrendingUp"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding EsCrecimientoPositivo}" Value="False">
                                                        <Setter Property="Kind" Value="TrendingDown"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </materialDesign:PackIcon.Style>
                                    </materialDesign:PackIcon>

                                    <TextBlock Text="{Binding TextoComparativo}" 
                                        Foreground="White" FontSize="11" FontWeight="Bold" Margin="5,0,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card Grid.Column="1" UniformCornerRadius="20" Margin="0,0,15,0" Padding="20">
                    <StackPanel VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="ReceiptText" Width="30" Height="30" Foreground="Orange" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding KpiTransacciones, StringFormat={}{0:N0}}" FontSize="28" FontWeight="Bold"/>
                        <TextBlock Text="Transacciones" Opacity="0.5" FontSize="12" FontWeight="SemiBold"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Grid.Column="2" UniformCornerRadius="20" Margin="0,0,15,0" Padding="20">
                    <StackPanel VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="AccountGroup" Width="30" Height="30" Foreground="Teal" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding KpiClientes, StringFormat={}{0:N0}}" FontSize="28" FontWeight="Bold"/>
                        <TextBlock Text="Clientes Únicos" Opacity="0.5" FontSize="12" FontWeight="SemiBold"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Grid.Column="3" UniformCornerRadius="20" Padding="20">
                    <StackPanel VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="ChartDonut" Width="30" Height="30" Foreground="#E91E63" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding KpiLitros, StringFormat={}{0:N0} L}" FontSize="28" FontWeight="Bold"/>
                        <TextBlock Text="Litros totales" Opacity="0.5" FontSize="12" FontWeight="SemiBold"/>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>

            <materialDesign:Card Grid.Row="2" UniformCornerRadius="20" Padding="25" Margin="0,0,0,25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="300"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Tendencia de Ventas" FontSize="18" FontWeight="Bold"/>
                            <TextBlock Text="Evolución diaria de facturación" FontSize="12" Opacity="0.5"/>
                        </StackPanel>
                    </Grid>

                    <lvc:CartesianChart Grid.Row="1" 
                                        Series="{Binding SeriesVentas}" 
                                        XAxes="{Binding EjeX}"
                                        YAxes="{Binding EjeY}"
                                        TooltipPosition="Top">
                    </lvc:CartesianChart>

                    <Grid Grid.Row="1" Background="White" Opacity="0.8" 
                          Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
                        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" 
                                     IsIndeterminate="True" Value="0" Width="40" Height="40"/>
                    </Grid>
                </Grid>
            </materialDesign:Card>

            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <materialDesign:Card Grid.Column="0" UniformCornerRadius="20" Margin="0,0,20,0" Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Top Clientes" Margin="20" FontSize="16" FontWeight="Bold"/>

                        <DataGrid Grid.Row="1" ItemsSource="{Binding TopProductosList}" 
                                  Style="{StaticResource ModernDataGrid}"
                                  BorderThickness="0"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="None"
                                  RowBackground="Transparent">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" Binding="{Binding Ranking}" Width="50" ElementStyle="{StaticResource CellMoney}"/>
                                <DataGridTemplateColumn Header="Cliente" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="AccountCircle" Foreground="Gray" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                <TextBlock Text="{Binding Nombre}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Monto" Binding="{Binding Monto, StringFormat=C2}" Width="Auto" FontWeight="Bold" ElementStyle="{StaticResource CellMoney}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card Grid.Column="1" UniformCornerRadius="20" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Actividad Reciente" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                        <ItemsControl Grid.Row="1" ItemsSource="{Binding UltimosClientesList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Width="40" Height="40" CornerRadius="20" Background="#F0F2F5" Margin="0,0,12,0">
                                            <TextBlock Text="{Binding Iniciales}" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                                       Foreground="#5C6B7F" FontWeight="Bold" FontSize="12"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Nombre}" FontWeight="SemiBold" FontSize="13" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding Fecha, StringFormat='Hace un momento • {0:HH:mm}'}" 
                                                       FontSize="11" Opacity="0.5"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </materialDesign:Card>
            </Grid>

        </Grid>
    </ScrollViewer>
</UserControl>