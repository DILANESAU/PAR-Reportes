<Window x:Class="WPF_PAR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_PAR"
        xmlns:vm="clr-namespace:WPF_PAR.MVVM.ViewModels"
        xmlns:v="clr-namespace:WPF_PAR.MVVM.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Sistema Principal" Height="450" Width="800">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <v:SettingsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <v:DashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:FamiliaViewModel}">
            <v:FamiliasView/>
        </DataTemplate>

        <Style TargetType="Button" x:Key="MenuButton" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0,0,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#202020" ClipToBounds="True">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Width" Value="220"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsMenuOpen}" Value="False">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Width"
                                                     To="70" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Width"
                                                     To="220" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" 
                        Style="{StaticResource MaterialDesignIconForegroundButton}"
                        Command="{Binding ToggleMenuCommand}"
                        Foreground="White" Width="40" Height="40">
                        <materialDesign:PackIcon Kind="Menu" Width="25" Height="25"/>
                    </Button>

                    <TextBlock Grid.Column="1" Text="PAR Reportes" 
                           Foreground="White" FontSize="20" FontWeight="Bold" 
                           VerticalAlignment="Center"
                           Visibility="{Binding IsMenuOpen, Converter={StaticResource BoolToVis}}"/>
                </Grid>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" Margin="0,10,0,0">
                    <StackPanel>

                        <Button Style="{StaticResource MenuButton}" Command="{Binding DashboardViewCommand}" ToolTip="Inicio">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ViewDashboard" Width="24" Height="24" VerticalAlignment="Center"/>

                                <TextBlock Text="Dashboard" Margin="20,0,0,0" VerticalAlignment="Center"
                                       Visibility="{Binding IsMenuOpen, Converter={StaticResource BoolToVis}}"/>
                            </StackPanel>
                        </Button>

                        <Separator Background="#444" Margin="10"/>

                        <Expander HorizontalAlignment="Stretch" Background="Transparent" BorderBrush="Transparent">
                            <Expander.Header>
                                <Grid Width="180">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Grid.Column="0" Kind="HomeCity" Width="24" Height="24" Foreground="White"/>
                                    <TextBlock Grid.Column="1" Text="Arquitectónica" Foreground="White" FontSize="15" Margin="15,0,0,0" VerticalAlignment="Center"
                                           Visibility="{Binding DataContext.IsMenuOpen, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVis}}"/>
                                </Grid>
                            </Expander.Header>

                            <StackPanel Background="#151515">
                                <Button Style="{StaticResource MenuButton}" Command="{Binding NavegarLineaCommand}" CommandParameter="Arquitectonica" ToolTip="Ver Resumen">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="• Resumen" Margin="35,0,0,0"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Expander>

                        <Expander HorizontalAlignment="Stretch" Background="Transparent" BorderBrush="Transparent" Margin="0,5,0,0">
                            <Expander.Header>
                                <Grid Width="180">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Grid.Column="0" Kind="Factory" Width="24" Height="24" Foreground="White"/>
                                    <TextBlock Grid.Column="1" Text="Especializada" Foreground="White" FontSize="15" Margin="15,0,0,0" VerticalAlignment="Center"
                                           Visibility="{Binding DataContext.IsMenuOpen, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVis}}"/>
                                </Grid>
                            </Expander.Header>

                            <StackPanel Background="#151515">
                                <Button Style="{StaticResource MenuButton}" Command="{Binding NavegarLineaCommand}" CommandParameter="Especializada">
                                    <TextBlock Text="• Resumen" Margin="35,0,0,0"/>
                                </Button>
                            </StackPanel>
                        </Expander>

                    </StackPanel>
                </ScrollViewer>

                <StackPanel Grid.Row="2" Margin="0,0,0,20">
                    <Separator Background="#444" Margin="10"/>
                    <Button Style="{StaticResource MenuButton}" Command="{Binding SettingsViewCommand}" ToolTip="Configuración">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Cog" Width="24" Height="24" VerticalAlignment="Center"/>
                            <TextBlock Text="Ajustes" Margin="20,0,0,0" VerticalAlignment="Center"
                                   Visibility="{Binding IsMenuOpen, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <ContentControl Grid.Column="1" Content="{Binding CurrentView}"/>

        <materialDesign:Snackbar MessageQueue="{materialDesign:MessageQueue}" x:Name="MainSnackbar" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
