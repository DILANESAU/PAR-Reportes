<Window x:Class="WPF_PAR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_PAR"
        xmlns:vm="clr-namespace:WPF_PAR.MVVM.ViewModels"
        xmlns:v="clr-namespace:WPF_PAR.MVVM.Views"
        xmlns:models="clr-namespace:WPF_PAR.MVVM.Models"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Sistema Principal - PAR Reportes" Height="768" Width="1280"
        WindowStartupLocation="CenterScreen"
        RenderOptions.BitmapScalingMode="HighQuality" 
        TextOptions.TextFormattingMode="Display"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Background="{DynamicResource MaterialDesignPaper}">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <v:SettingsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <v:DashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:FamiliaViewModel}">
            <v:FamiliasView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ClientesViewModel}">
            <v:ClientesView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type models:NotificationAlert}">
            <materialDesign:Card MinWidth="350" MaxWidth="500" MinHeight="65"
                                 UniformCornerRadius="8" Padding="0" Margin="8" 
                                 materialDesign:ElevationAssist.Elevation="Dp4"
                                 Background="{DynamicResource MaterialDesignPaper}">
                <materialDesign:Card.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.4"/>
                                <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,20,0,0" To="8" Duration="0:0:0.4">
                                    <ThicknessAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </ThicknessAnimation.EasingFunction>
                                </ThicknessAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </materialDesign:Card.Triggers>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border x:Name="IconBorder" Background="{DynamicResource PrimaryHueMidBrush}" 
                            CornerRadius="8,0,0,8" VerticalAlignment="Stretch">
                        <materialDesign:PackIcon x:Name="AlertIcon" Kind="Information" Width="24" Height="24" 
                                                 Foreground="{DynamicResource PrimaryHueMidForegroundBrush}" 
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Column="1" Margin="15,10" VerticalAlignment="Center">
                        <TextBlock x:Name="TitleText" Text="{Binding Title}" FontWeight="Bold" FontSize="14" Margin="0,0,0,2"/>
                        <TextBlock Text="{Binding Message}" FontSize="12" Opacity="0.7" TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Type}" Value="Error">
                    <Setter TargetName="IconBorder" Property="Background" Value="{DynamicResource MaterialDesignValidationErrorBrush}"/>
                    <Setter TargetName="AlertIcon" Property="Kind" Value="CloseCircleOutline"/>
                    <Setter TargetName="TitleText" Property="Foreground" Value="{DynamicResource MaterialDesignValidationErrorBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Type}" Value="Warning">
                    <Setter TargetName="IconBorder" Property="Background" Value="#FF9800"/>
                    <Setter TargetName="AlertIcon" Property="Kind" Value="AlertOutline"/>
                    <Setter TargetName="TitleText" Property="Foreground" Value="#EF6C00"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Type}" Value="Success">
                    <Setter TargetName="IconBorder" Property="Background" Value="#4CAF50"/>
                    <Setter TargetName="AlertIcon" Property="Kind" Value="CheckCircle"/>
                    <Setter TargetName="TitleText" Property="Foreground" Value="#2E7D32"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <Style x:Key="ModernNavButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="8"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Opacity" Value="0.75"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MaterialDesignSelection}"/>
                    <Setter Property="Opacity" Value="1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
            <Setter Property="Opacity" Value="0.5"/>
            <Setter Property="Margin" Value="24,24,0,8"/>
        </Style>
    </Window.Resources>

    <materialDesign:DrawerHost IsLeftDrawerOpen="{Binding IsMenuOpen, Mode=TwoWay}"
                               OpenMode="Standard">
        <materialDesign:DrawerHost.LeftDrawerContent>
            <Grid Width="270" Background="{DynamicResource MaterialDesignPaper}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <materialDesign:ColorZone Mode="PrimaryMid" Padding="20" materialDesign:ElevationAssist.Elevation="Dp4">
                    <StackPanel Orientation="Vertical">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon Kind="AccountCircle" Width="55" Height="55" 
                                             Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"
                                             HorizontalAlignment="Left"/>

                            <Button Grid.Column="1" Style="{StaticResource MaterialDesignToolForegroundButton}" 
                             Height="30" Width="30" Padding="0"
                             Foreground="{DynamicResource PrimaryHueMidForegroundBrush}" Opacity="0.6">
                                <materialDesign:PackIcon Kind="DotsVertical" />
                            </Button>
                        </Grid>

                        <TextBlock Text="Administrador" FontWeight="Bold" FontSize="16" Margin="4,10,0,0"
                           Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"/>
                        <TextBlock Text="Gerente General" FontSize="13" Opacity="0.8" Margin="4,0,0,0"
                           Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"/>
                    </StackPanel>
                </materialDesign:ColorZone>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10">
                    <StackPanel>
                        <TextBlock Text="GENERAL" Style="{StaticResource SectionHeaderStyle}"/>

                        <Button Style="{StaticResource ModernNavButton}" Command="{Binding DashboardViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ViewDashboardOutline" Width="22" Height="22" Margin="0,0,16,0"/>
                                <TextBlock Text="Dashboard" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <TextBlock Text="ANÁLISIS DE VENTAS" Style="{StaticResource SectionHeaderStyle}"/>
                        <Button Style="{StaticResource ModernNavButton}" Command="{Binding FamiliaViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ChartBoxOutline" Width="22" Height="22" Margin="0,0,16,0"/>
                                <TextBlock Text="Familias y Productos" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource ModernNavButton}" Command="{Binding ClientesViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountGroupOutline" Width="22" Height="22" Margin="0,0,16,0"/>
                                <TextBlock Text="Cartera de Clientes" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel Grid.Row="2" Margin="10,0,10,20">
                    <Separator Margin="10,10" Background="{DynamicResource MaterialDesignDivider}"/>
                    <TextBlock Text="v1.0.2 PAR Intelligence" HorizontalAlignment="Center" FontSize="11"
                               Opacity="0.4" Margin="0,15,0,0"/>
                </StackPanel>
            </Grid>
        </materialDesign:DrawerHost.LeftDrawerContent>

        <DockPanel>
            <materialDesign:ColorZone Padding="16" materialDesign:ShadowAssist.Darken="True"
                                      Mode="PrimaryMid" DockPanel.Dock="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ToggleButton Style="{StaticResource MaterialDesignHamburgerToggleButton}" 
                                  IsChecked="{Binding IsMenuOpen, Mode=TwoWay}" 
                                  Width="30" Height="30" Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"/>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="24,0,0,0">
                        <TextBlock Text="PAR INTELLIGENCE" FontSize="20" FontWeight="Bold" 
                                   Foreground="{DynamicResource PrimaryHueMidForegroundBrush}" />
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <materialDesign:Badged Badge="3" Margin="0,0,15,0">
                            <Button Style="{StaticResource MaterialDesignIconForegroundButton}" ToolTip="Notificaciones" Foreground="{DynamicResource PrimaryHueMidForegroundBrush}">
                                <materialDesign:PackIcon Kind="BellOutline" Width="24" Height="24"/>
                            </Button>
                        </materialDesign:Badged>

                        <Button Style="{StaticResource MaterialDesignIconForegroundButton}" ToolTip="Ayuda" Foreground="{DynamicResource PrimaryHueMidForegroundBrush}">
                            <materialDesign:PackIcon Kind="HelpCircleOutline" Width="24" Height="24"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:ColorZone>

            <materialDesign:DialogHost Identifier="RootDialog" SnackbarMessageQueue="{Binding MessageQueue}">
                <Grid>
                    <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=FadeIn}">
                        <ContentControl Content="{Binding CurrentView}" Margin="16"/>
                    </materialDesign:TransitioningContent>

                    <materialDesign:Snackbar x:Name="MainSnackbar" MessageQueue="{Binding MessageQueue}"/>
                </Grid>
            </materialDesign:DialogHost>
        </DockPanel>

    </materialDesign:DrawerHost>
</Window>